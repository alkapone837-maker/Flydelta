-- Alkapone Universal V2 | Fly + Noclip + Speed + JumpBoost
-- By Alkapone üêê
-- Compatible Delta / PC / Mobile

local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Camera = workspace.CurrentCamera

-- Variables
local flying = false
local noclip = false
local speed = 60
local jumpBoost = 100
local up, down = false, false
local bv, bg
local flyConnection
local noclipConnection

-- Funci√≥n para obtener personaje
local function getChar()
	local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
	while not char:FindFirstChild("HumanoidRootPart") do task.wait(0.1) end
	return char
end

-- UI
local gui = Instance.new("ScreenGui", game.CoreGui)
gui.Name = "AlkaponeUniversalV2"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 280, 0, 380)
frame.Position = UDim2.new(0.05,0,0.2,0)
frame.BackgroundColor3 = Color3.fromRGB(180,220,255)
frame.BorderColor3 = Color3.fromRGB(255,255,255)
frame.BorderSizePixel = 2
frame.Active = true
frame.Draggable = true

-- Fondo opcional
local bgImg = Instance.new("ImageLabel", frame)
bgImg.Size = UDim2.new(1,0,1,0)
bgImg.Position = UDim2.new(0,0,0,0)
bgImg.BackgroundTransparency = 1
bgImg.Image = "rbxassetid://157365444" -- Cambia por tu ID de Il Nene de Oro
bgImg.ScaleType = Enum.ScaleType.Crop

-- Contenedor semi-transparente
local container = Instance.new("Frame", frame)
container.Size = UDim2.new(1,0,1,0)
container.BackgroundColor3 = Color3.fromRGB(20,20,20)
container.BackgroundTransparency = 0.3
container.BorderSizePixel = 0

-- T√≠tulo
local title = Instance.new("TextLabel", container)
title.Size = UDim2.new(1,0,0,50)
title.BackgroundTransparency = 1
title.Text = "Alkapone Universal V2"
title.TextColor3 = Color3.fromRGB(0,50,120)
title.Font = Enum.Font.GothamBold
title.TextSize = 24

-- Funci√≥n de secci√≥n
local function sectionTitle(text, y)
	local lbl = Instance.new("TextLabel", container)
	lbl.Size = UDim2.new(1,0,0,30)
	lbl.Position = UDim2.new(0,0,0,y)
	lbl.BackgroundTransparency = 1
	lbl.Text = text
	lbl.TextColor3 = Color3.fromRGB(255,200,0)
	lbl.Font = Enum.Font.GothamBold
	lbl.TextSize = 18
	return lbl
end

sectionTitle("1. FLY", 60)
sectionTitle("2. NOCLIP", 140)
sectionTitle("3. JUMP BOOST", 210)

-- Funci√≥n bot√≥n
local function btn(text, y, color)
	local b = Instance.new("TextButton", container)
	b.Size = UDim2.new(0.85,0,0,40)
	b.Position = UDim2.new(0.075,0,0,y)
	b.BackgroundColor3 = color
	b.Text = text
	b.TextColor3 = Color3.fromRGB(255,255,255)
	b.Font = Enum.Font.GothamBold
	b.TextSize = 16
	local c = Instance.new("UICorner", b)
	c.CornerRadius = UDim.new(0,12)
	return b
end

-- Botones
local flyBtn = btn("ü™Ω FLY : OFF", 90, Color3.fromRGB(0,140,255))
local noclipBtn = btn("üß± NOCLIP : OFF", 170, Color3.fromRGB(255,80,80))
local upBtn = btn("‚ñ≤ SUBIR", 200, Color3.fromRGB(120,255,140))
local downBtn = btn("‚ñº BAJAR", 240, Color3.fromRGB(255,180,120))
local speedUpBtn = btn("‚ö° SPEED +", 280, Color3.fromRGB(140,120,255))
local jumpBtn = btn("‚¨Ü JUMP BOOST", 320, Color3.fromRGB(255,255,80))

-- Funciones Fly
local function startFly()
	local char = getChar()
	local hrp = char:WaitForChild("HumanoidRootPart")
	if bv then bv:Destroy() end
	if bg then bg:Destroy() end
	bv = Instance.new("BodyVelocity", hrp)
	bv.MaxForce = Vector3.new(1e9,1e9,1e9)
	bv.Velocity = Vector3.zero
	bg = Instance.new("BodyGyro", hrp)
	bg.MaxTorque = Vector3.new(1e9,1e9,1e9)
	bg.CFrame = hrp.CFrame
	if flyConnection then flyConnection:Disconnect() end
	flyConnection = RunService.RenderStepped:Connect(function()
		if flying then
			local dir = Vector3.zero
			if UIS.TouchEnabled then dir = Camera.CFrame.LookVector end
			if UIS:IsKeyDown(Enum.KeyCode.W) then dir += Camera.CFrame.LookVector end
			if UIS:IsKeyDown(Enum.KeyCode.S) then dir -= Camera.CFrame.LookVector end
			if UIS:IsKeyDown(Enum.KeyCode.A) then dir -= Camera.CFrame.RightVector end
			if UIS:IsKeyDown(Enum.KeyCode.D) then dir += Camera.CFrame.RightVector end
			if UIS:IsKeyDown(Enum.KeyCode.Space) then dir += Vector3.new(0,1,0) end
			if UIS:IsKeyDown(Enum.KeyCode.LeftControl) then dir -= Vector3.new(0,1,0) end
			if up then dir += Vector3.new(0,1,0) end
			if down then dir -= Vector3.new(0,1,0) end
			bv.Velocity = dir * speed
			bg.CFrame = Camera.CFrame
		end
	end)
end

local function stopFly()
	if bv then bv:Destroy() bv=nil end
	if bg then bg:Destroy() bg=nil end
	if flyConnection then flyConnection:Disconnect() flyConnection=nil end
end

-- NOCLIP
if noclipConnection then noclipConnection:Disconnect() end
noclipConnection = RunService.Stepped:Connect(function()
	if noclip then
		local char = getChar()
		for _,v in pairs(char:GetDescendants()) do
			if v:IsA("BasePart") then v.CanCollide = false end
		end
	end
end)

-- Eventos botones
flyBtn.MouseButton1Click:Connect(function()
	flying = not flying
	flyBtn.Text = flying and "ü™Ω FLY : ON" or "ü™Ω FLY : OFF"
	if flying then startFly() else stopFly() end
end)

noclipBtn.MouseButton1Click:Connect(function()
	noclip = not noclip
	noclipBtn.Text = noclip and "üß± NOCLIP : ON" or "üß± NOCLIP : OFF"
end)

upBtn.MouseButton1Down:Connect(function() up=true end)
upBtn.MouseButton1Up:Connect(function() up=false end)
downBtn.MouseButton1Down:Connect(function() down=true end)
downBtn.MouseButton1Up:Connect(function() down=false end)

speedUpBtn.MouseButton1Click:Connect(function() speed +=10 end)

jumpBtn.MouseButton1Click:Connect(function()
	local char = getChar()
	if char:FindFirstChild("Humanoid") then
		char.Humanoid.JumpPower = jumpBoost
	end
end)

print("Alkapone Universal V2 cargado correctamente ‚úÖ")
